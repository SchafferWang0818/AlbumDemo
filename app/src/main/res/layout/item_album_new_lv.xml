<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_new_lv_item_iv"
        android:layout_width="220px"
        android:layout_height="220px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="26px"
        android:layout_marginTop="20px"
        android:src="@drawable/zuireyinyue_def" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/album_new_lv_item_iv"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="偷洒一滴泪"
            android:textColor="#333333"
            android:textSize="28px"
            android:id="@+id/album_new_lv_item_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16px"
            android:layout_marginTop="16px"
            android:text="潘小芬"
            android:textColor="#666666"
            android:textSize="24px"
            android:id="@+id/album_new_lv_item_author" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:layout_marginBottom="30px">

            <ImageView
                android:id="@+id/item_new_lv_riqi_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/riqiicon" />

            <TextView
                android:id="@+id/item_hot_gv_music_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_toRightOf="@id/item_new_lv_riqi_iv"
                android:text="2010-06-30"
                android:textColor="#666666"
                android:textSize="22px" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>