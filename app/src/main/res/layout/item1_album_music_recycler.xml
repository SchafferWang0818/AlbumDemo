<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item1_details_music_cover_iv"
        android:layout_width="220px"
        android:layout_height="220px"
        android:layout_marginBottom="16px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="26px"
        android:layout_marginTop="30px"
        android:scaleType="centerCrop"
        android:src="@drawable/zuireyinyue_def" />

    <ImageView
        android:id="@+id/item1_details_music_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30px"
        android:src="@drawable/gengduo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item1_details_music_cover_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item1_details_music_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月亮颂"
            android:textColor="#333333"
            android:textSize="28px" />

        <TextView
            android:id="@+id/item1_details_music_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:text="潘小芬"
            android:textColor="#666666"
            android:textSize="24px" />
    </LinearLayout>
</RelativeLayout>