<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_hot_gv_music_cover"
        android:layout_width="220px"
        android:layout_height="220px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30px"
        android:src="@drawable/zuireyinyue_def" />

    <TextView
        android:id="@+id/item_hot_gv_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="偷洒一滴泪"
        android:maxLines="1"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/item_hot_gv_music_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16px"
        android:text="潘小芬"
        android:textColor="#666666"
        android:textSize="24px" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="24px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16px">

        <ImageView
            android:id="@+id/item_hot_gv_riqi_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/riqiicon" />

        <TextView
            android:id="@+id/item_hot_gv_music_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@id/item_hot_gv_riqi_iv"
            android:text="2010-06-30"
            android:textColor="#666666"
            android:textSize="22px" />
    </RelativeLayout>
</LinearLayout>